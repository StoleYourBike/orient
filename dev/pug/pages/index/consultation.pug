+b.SECTION.section.consultation(id="consultation")
   .container
      +b.introduction_left
         +b.title.__title
            +e.move(data-title-move="to-right")
               +e.H1.text Как получить
                  +e.SPAN.overlay
            +e.move(data-title-move="to-right")
               +e.H1.text oнлайн консультацию
                  +e.SPAN.overlay
      +e.content
         .row
            each object in content.steps
               .col.col-12.col-lg-4
                  +b.step(data-anim-stagger="vertical")
                     +e.number= object['curNum']
                     +e.content
                        +e.H4.title!= object['title']
                        +e.P.text= object['text']
                        if object['curNum'] == 01
                           +b.BUTTON.button_theme_accent._rounded._size-l(data-toggle="modal" data-target="#register")
                              +e.SPAN.text Оставить заявку