+b.SECTION.section.section-certificates
   .container
      +e.introduction
         +e.H1.title Cертификаты
      +e.content
         .row
            each object in content.certificates
               .col-md-4.col-lg-3
                  +b.certificate
                     +e.img-container(class='_' + object['orientation'])
                        +e.img(src= "static/img/content/certificates/" + object['img'])
                     +e.content
                        +e.H4.title= object['title']
                        +e.text= object['descr']
            