+b.SECTION.section.certificates(id="certificates")
   .container
      +b.introduction
         +b.title.__title
            +e.move(data-title-move="to-right")
               +e.H1.text Cертификаты
                  +e.SPAN.overlay
      +e.content
         .row
            each object in content.certificates
               .col-md-4.col-lg-3
                  +b.certificate(data-anim-stagger="vertical")
                     +e.img-container(href="static/img/content/certificates/" + object['img'] class='_' + object['orientation'] + ' js-gallery-thumbnail')
                        +e.img(src= "static/img/content/certificates/" + object['img'] alt= object['title'])
                     +e.content
                        +e.H4.title= object['title']
                        +e.text= object['descr']
   +b.ornament-animation.certificates__ornament
      +e.inner
         +e.svg
            +icon('hexagon')
         +e.svg
            +icon('hexagon')